@model List<productuploader.Objects.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Bim Demo</h1>
    <p class="lead">Bim Demo 2021-04-22</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-12">
            <div class="col-md-4">
                <img src="@item.ImagePath" width="250" height="250">
            </div>
            <div class="col-md-8">
                <h2>@item.Name</h2>
                <p>@item.Description</p>
                <p><i>@item.Price :-</i></p>
            </div>
        </div>
    }
</div>
